{% if hourly %}
    {% set numSteps = hourly | calcNumEntries %}
    {% set currentStep = 0 %}
    <table class="{{ config.tableClass }}">
        {% set hours = hourly.slice(0, numSteps) %}
        {% for hour in hours %}
            <tr {% if config.colored %}class="colored"{% endif %} {% if config.fade %}style="opacity: {{ currentStep | opacity(numSteps) }};"{% endif %}>
                <td class="day">{{ hour.date | formatTime }}</td>
                <td class="bright weather-icon"><span class="wi weathericon wi-{{ hour.weatherType }}"></span></td>
                <td class="align-right bright">
                    {{ hour.temperature | roundValue | unit("temperature") }}
                </td>
                 {% if config.showPrecipitation %}
                    {% if hour.precipitationAmount %}
                        {% if hour.precipitationUnits %}
                            {% set precipitationAmountWithUnit = hour.precipitationAmount + hour.precipitationUnits %}
                        {% else %}
                            {% set precipitationAmountWithUnit = hour.precipitationAmount | unit("precip") %}
                        {% endif %}
                    {% endif %}
                    {% set precipitationPercentage = "" %}
                    {% if hour.precipitationPercentage %}
                            {% set precipitationPercentage = hour.precipitationPercentage %}
                    {% endif %}
                    <td class="align-right bright precipitation">
                        {{ precipitationAmountWithUnit }}
                        {% if precipitationAmountWithUnit and precipitationPercentage !== "" %}
                            ({{ precipitationPercentage }}%)
                        {% elif precipitationPercentage !== "" %}
                            {{ precipitationPercentage }}%
                        {% endif %}
                    </td>			
                {% endif %}
                {% if config.showPrecipitationAmount %}
                    {% if hour.precipitationUnits %}	
                        <td class="align-right bright precipitation">
                            {{ hour.precipitationAmount }}{{ hour.precipitationUnits }}
                        </td>			
		                {% else %}
                        <td class="align-right bright precipitation">
                            {{ hour.precipitationAmount | unit("precip") }}
                        </td>
                    {% endif %}
                {% endif %}
                {% if config.showPrecipitationPercentage %}
                    <td class="align-right bright precipitation">
                        {{ hour.precipitationPercentage }}%
                    </td>
                {% endif %}
            </tr>
            {% set currentStep = currentStep + 1 %}
        {% endfor %}
    </table>
{% else %}
    <div class="dimmed light small">
        {{ "LOADING" | translate }}
    </div>
{% endif %}

